{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "properties": {
        "version": {
            "type": "string",
            "required": true
        },
        "statement": {
            "type": "array",
            "required": true,
            "items": {
                "type": "object",
                "properties": {
                    "effect": {
                        "type": "string",
                        "required": true
                    },
                    "action": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "required": true
                        }
                    },
                    "resource": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "required": true
                        }
                    },
                    "condition": {
                        "type": "object",
                        "required": false
                    }
                }
            }
        }
    }
}